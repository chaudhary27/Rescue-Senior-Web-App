<!DOCTYPE html>
<html>
<head>
  <title>RescueSenior</title>
  <%= csrf_meta_tags %>
  <link href="//fonts.googleapis.com/css?family=Open+Sans:400,700,800" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>


<body>
  <div id="wrap">
    <nav class="navbar navbar-default navbar-static-top" role="navigation">
      <div class='container'>
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!-- <a href="/" class="navbar-brand"><i class="fa fa-heartbeat"></i> RescueSeniors</a> -->
          <%= link_to root_path, class: "navbar-brand" do %>
          <i class="fa fa-heartbeat"></i>
          RescueSenior
          <% end %>
        </div>
        <div class="collapse navbar-collapse" id="main-nav-collapse">
          <ul class="nav navbar-nav navbar-right">
            <!-- <li><a href="/about">About</a></li> -->
            <% if user_signed_in? %>
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-default navbar-btn" %>
            <li><%= link_to "My Account", edit_user_registration_path %></li>
            <% else %>
            <%= link_to "Log In", new_user_session_path, class: "btn btn-default navbar-btn" %>
            <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default navbar-btn" %>
            <% end %>
            
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Contact Us", new_contact_path %></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div>
    </nav>
    
    <div class="flash-container flash-container">
      <% flash.each do |type, msg| %>
      <%= content_tag :div, msg, class: "alert alert-#{type}" %>
      <% end %>
    </div>
    
    <%= yield %>
  </div>
  <br class="clr" />
  
  <div id="footer">
    <div class="container">
      <div class="col-xs-12 col-sm-3">
        <b>Helpers</b>
        <br />
        <%= link_to 'Tips', '#' %>
        <br />
        <%= link_to 'Dashboard', '#' %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>About</b>
        <br />
        <%= link_to 'Team', about_path %>
        <br />
        <%= link_to 'Project Report', 'https://rescueseniors.herokuapp.com/report' %>
        <br />
        <%= link_to 'Project Presentation', 'https://rescueseniors.herokuapp.com/presentation' %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>Contact</b><br />
        <br />
        <%= link_to 'Contact-Us', new_contact_path, class: "btn btn-info btn-sm" %>
        
      </div>
      <div class="col-xs-12 col-sm-3 social">
        <b>Social</b>
        <br />
        <br />
        
        <%= link_to 'https://github.com/chaudhary27/Rescue-Senior-Web-App', target: "_blank" do %>
        <%= image_tag 'github.png', :class => 'social-button' %>
        <% end %>
        
        <%= link_to '#', target: "_blank" do %>
        <%= image_tag 'facebook.png', :class => 'social-button' %>
        <% end %>
        
        <%= link_to '#', target: "_blank" do %>
        <%= image_tag 'twitter.png', :class => 'social-button' %>
        <% end %>
        
      </div>
    </div>
  </div>
</body>
</html>
