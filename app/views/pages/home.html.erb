  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 text-center wrap_title">
        <h2>Subscribe to be a Rescuer</h2>
        <p class="lead" style="margin-top:0"></p>
        <!--<p><a class="btn btn-embossed btn-primary view" role="button">Sign up now</a></p>-->
        <p><%= link_to "Sign up now", new_rescuer_path, class: 'btn btn-embossed btn-primary view' %></p>
      </div>
    </div>
  </div>
</div>
